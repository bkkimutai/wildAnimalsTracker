{{#partial "header"}}{{/partial}}
{{#partial "content"}}

    <div class="container text-center">
        {{#if AnimalWithLocation}}
            <h1>Sighting Registry!</h1>
            <p><a class="btn btn-outline-primary" href="/sighting/new">+ Add New Sighting</a></p>

            <div class="container text-start mx-auto">
                <div class="row">
                    {{#each AnimalWithLocation}}
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title"><strong>{{animalName}}</strong></h5>
                                    <p class="card-text">Animal Sighting: <a href="/location/{{locationId}}">{{locationName}}</a></p>
                                    <p class="card-text">Sighted by: <a href="/ranger/{{rangerId}}">{{rangerName}}</a></p>
                                    <a href="sighting/{{sightingId}}/animals/{{animalId}}" class="btn btn-primary"> Checkout {{animalName}}</a>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{else}}
            <div class="container text-center border border-primary mt-5">
                <p><a class="btn btn-outline-primary" href="/animals/new">Add A New Animals <i class="fa fa-mask"></i></a></p>
            </div>
        {{/if}}
    </div>

{{/partial}}

{{> "layout.hbs"}}
